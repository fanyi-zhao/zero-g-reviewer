# Sample .env file for Claude CR Agent
# Copy this to .env and fill in your values

# Required: GitLab access token with api and read_api scopes
CR_AGENT_GITLAB_TOKEN=glpat-your-token-here

# Required: Anthropic API key (or compatible endpoint)
CR_AGENT_LLM_API_KEY=sk-ant-your-key-here

# Required: GitLab project ID (numeric) or path (namespace/project)
CR_AGENT_PROJECT_ID=12345

# Optional: GitLab instance URL (default: https://gitlab.com)
# CR_AGENT_GITLAB_BASE_URL=https://gitlab.example.com

# Optional: Claude-compatible API endpoint (default: https://api.anthropic.com)
# CR_AGENT_LLM_BASE_URL=https://api.anthropic.com

# Optional: Model to use (default: claude-sonnet-4-20250514)
# CR_AGENT_LLM_MODEL=claude-sonnet-4-20250514

# Optional: Maximum files to review (default: 50)
# CR_AGENT_MAX_FILES=50

# Optional: Maximum diff characters to process (default: 100000)
# CR_AGENT_MAX_DIFF_CHARS=100000

# Optional: Post review as MR comment (default: false)
# CR_AGENT_POST_TO_GITLAB=false
